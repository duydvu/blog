#header
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 50px
  box-shadow: 0px 1px 2px #ddd
  background: #fff
  z-index: 10000

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden
  height: 100%

$nav-link
  color: color-default
  text-decoration: none
  display: block
  line-height: 50px

#logo
  text-decoration: none
  letter-spacing: 2px
  display: inline-block
  *
    float: left
  img
    height: 30px
    padding: 10px
  h1
    @extend $nav-link
    color: color-link
    font-weight: 700

#main-nav
  float: left

.nav-icon
  @extend $nav-link
  float: left
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: 50px
  height: 50px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  letter-spacing: 1px
  @media mq-mobile
    display: none

#sub-nav
  float: right

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 0
  width: 300px
  height: 50px
  left: 100%
  opacity: 0
  transition: 0.2s 0.1s ease-out
  &.on
    opacity: 1
    left: calc(100% - 300px)
    transition: 0.2s ease-out
  @media mq-mobile
    width: 100%
    left: 0
    visibility: hidden
    &.on
      visibility: visible
      opacity: 1
      left: 0

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  line-height: 40px

.search-form-input
  border: none
  background: none
  color: color-default
  width: calc(100% - 30px)
  font: font-size font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 15px
  width: 20px
  transform: translateY(-50%)
  font: font-size font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777